# Copy this file to `server/.env` (or `.env` in the project root) and adjust the values
# to match your deployment target.

# FastAPI / dashboard server configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8002

# Public URL used in console output and template hints.
# Include the protocol (http/https) and port if required.
PUBLIC_DASHBOARD_DOMAIN=http://localhost:8002

# Flower (federated learning) server configuration
FLOWER_SERVER_HOST=0.0.0.0
FLOWER_SERVER_PORT=8080

# Example production override:
# FASTAPI_HOST=0.0.0.0
# FASTAPI_PORT=80
# PUBLIC_DASHBOARD_DOMAIN=https://dashboard.example.com
